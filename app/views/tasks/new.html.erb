<%= provide(:title, "Add task") %>
<h1>New Task</h1>
<div class="row">
	<div class="col-md-12">
		<section>
			<%= form_for(@task) do |f| %>

				<%= render 'shared/error_messages', object: f.object %>

				<div class="row">

					<%= render 'taskfields', f: f %>

					<%= f.submit "Add", class: "btn btn-primary btn-large right_align" %>
				</div>
			<% end %>
		</section>
	</div>
</div>