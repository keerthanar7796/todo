<%= provide(:title, "Edit task") %>
<h1>Edit Task</h1>
<div class="row">
	<div class="span12">
		<section>
			<%= form_for(@task) do |f| %>

				<%= render 'shared/error_messages', object: f.object %>
	
				<div class="row">

						<%= render 'taskfields', f: f %>		

						<%= hidden_field_tag :open, @task.open %>

						<%= f.submit "Update", class: "btn btn-primary btn-large right_align" %>
				</div>
			<% end %>
		</section>
	</div>
</div>