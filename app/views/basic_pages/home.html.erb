<% if signed_in? %>
	<div class="center">
		<%= link_to "Click here to go to your profile!", user_path(current_user) %>
	</div>
<% else %>
	<div class="center jumbotron">
		<h1>Welcome to the Todo app!</h1>
		<h2>Make your lists here</h2>
		<%= link_to "Sign up now!", signup_path, class: "btn btn-large btn-primary" %>	
	</div>
<% end %>